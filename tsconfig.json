{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "jsx": "react",
        "baseUrl": "./src",
        "lib": [
            "es2017",
            "dom"
        ],
         "types": [
            "node",
            "jest"
         ],
        "typeRoots": [
            "node_modules/@types"
         ]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
